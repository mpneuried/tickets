body
	padding 40px 0

.form-signin
	max-width 330px
	padding 15px
	margin 0 auto

	.heading
		margin-bottom 10px

	.form-control
		position relative
		font-size 16px
		height auto
		padding 10px
		box-sizing border-box

	.form-control:focus
		z-index 2

	input[name="email"]
		margin-bottom 0
		border-radius bottom 0

	input[name="password"]
		margin-top -1px
		border-radius top 0

	button
		margin-top 10px

	.alert
		padding 3px 10px
		margin-top 10px
