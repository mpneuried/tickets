#ticketlist
	padding 0
	list-style none
	border-top 1px solid linecolor
	position relative

	.ticket
		position relative
		border-bottom 1px solid linecolor
		padding 6px 5px 6px 40px 
		
		.state
			position absolute
			left 0px
			top 0px
			width 30px
			bottom -1px
			font-size 15px
			font-weight 100
			color #fff
			line-height 60px
			background-color #999
			text-align center
			border-bottom-width 1px
			border-bottom-style solid
			border-bottom-color #999 - 10%

		.state-new
			background-color statecolor-new
			border-bottom-color statecolor-new - 10%
		.state-pending
			background-color statecolor-pending
			border-bottom-color statecolor-pending - 10%
		.state-accepted
			background-color statecolor-accepted
			border-bottom-color statecolor-accepted - 10%
		.state-working
			background-color statecolor-working
			border-bottom-color statecolor-working - 10%
		.state-needanswer
			background-color statecolor-needanswer
			border-bottom-color statecolor-needanswer - 10%
		.state-replied
			background-color statecolor-replied
			border-bottom-color statecolor-replied - 10%
		.state-closed
			background-color statecolor-closed
			border-bottom-color statecolor-closed - 10%


		.tickettitle
			font-size 20px
			font-weight 200
			display block

		.editor
			position absolute
			right 5px
			padding 5px 7px
			font-size 15px
			top 18px
			z-index 2

		.time
		.author
			color #999
			font-size 11px
			i
				margin-right 3px

		.author
			padding 1px 2px
			margin-left 10px 
			.label
				margin-right 3px

.ticketdetail
	
	h3.title
		font-size 20px
		margin 20px 25px 20px
		font-weight 400

	p.desc
		font-size 18px
		margin 20px 25px 20px
		font-weight 200

	.stateprocess
		height 30px
		list-style none
		padding 0
		margin 0 0 15px 0
		overflow hidden
		li
			height 30px
			padding 0
			margin 0
			float left
			display block
			background-color linecolor - 20%
			border-left 1px solid linecolor + 10%
			text-align center
			font-size 11px
			line-height 30px
			color bgcolor
			font-weight bold

			.short
				display none
			.long
				display inline

		li.done
			background-color donecolor
		li.active
			background-color activecolor
		li:first-child
			border-left 0 solid

	h4.comments
		font-size 13px
		font-weight 200
		font-style italic
		padding 10px 25px 5px
		margin 0
		border-bottom 1px solid linecolor

	.editor
		position absolute
		right 25px
		padding 5px 7px
		font-size 15px
		top 18px

	#comments
		list-style none
		padding 0

		.time
		.author
			color #999
			font-size 11px
			i
				margin-right 3px

		.author
			padding 1px 2px
			margin-left 10px 
			.label
				margin-right 3px

		.comment
			padding 10px 25px
			font-weight 200
			position relative
			border-bottom 1px solid linecolor
			background-color #fff
			border-left 1px solid linecolor + 10%
			p
				margin 0


	button.pull-right
		margin-left 10px



@media( max-width: 499px )
	.ticketdetail .stateprocess li
		.short
			display inline
		.long
			display none